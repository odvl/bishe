<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/register_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey50"
    android:orientation="vertical">

    <com.iocm.freetime.wedgets.CommonToolBar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:isLeftImage="true"
        app:leftImageResource="@drawable/back_image"
        app:toolbarTitle="注册"></com.iocm.freetime.wedgets.CommonToolBar>

    <RelativeLayout
        android:id="@+id/view_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <com.iocm.freetime.wedgets.InputEditText
            android:id="@+id/mobile"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@color/white"
            app:hint="手机"
            app:inputType="phoneNumber"></com.iocm.freetime.wedgets.InputEditText>

        <LinearLayout
            android:id="@+id/code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/mobile"
            android:layout_alignRight="@+id/mobile"
            android:layout_below="@+id/mobile"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <com.iocm.freetime.wedgets.InputEditText
                android:id="@+id/verityCode"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                app:hint="验证"
                app:inputType="phoneNumber" />

            <Button
                android:id="@+id/getCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="12sp"
                android:maxWidth="65dp"
                android:layout_weight="1"
                android:background="@drawable/selector_common_btn"
                android:text="获取验证码"
                android:textColor="@color/red" />

        </LinearLayout>

        <com.iocm.freetime.wedgets.InputEditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/mobile"
            android:layout_alignRight="@+id/mobile"
            android:layout_below="@+id/code"
            android:layout_marginTop="30dp"
            android:background="@color/white"
            app:hint="昵称"></com.iocm.freetime.wedgets.InputEditText>

        <com.iocm.freetime.wedgets.InputEditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/mobile"
            android:layout_alignRight="@+id/mobile"
            android:layout_below="@+id/username"
            android:layout_marginTop="30dp"
            android:background="@color/white"
            app:hint="密码"
            app:inputType="password"></com.iocm.freetime.wedgets.InputEditText>
    </RelativeLayout>

    <Button
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/selector_common_btn"
        android:text="注册"
        android:textColor="@color/red"
        android:textSize="19sp" />


</RelativeLayout>
